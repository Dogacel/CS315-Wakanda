include [iostream:*]

initial { 
    string name
    number age
}

main {
    name = input("Please enter your name:")
    age = input("Please enter your age:")
    if age and age > 0 {
        print("Welcome ", name, "!")
    } else {
        print("Please enter a valid age next time!")
    }
}

end {
    print("Bye", name, "!")
}
